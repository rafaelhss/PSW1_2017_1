<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>cadastrarProfessor</servlet-name>
        <servlet-class>cadastrarProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarProfessor</servlet-name>
        <servlet-class>buscarProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletarProfessor</servlet-name>
        <servlet-class>deletarProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarProfessor</servlet-name>
        <servlet-class>editarProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formEditar</servlet-name>
        <servlet-class>formEditar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>consultarProfessor</servlet-name>
        <servlet-class>consultarProfessor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastrarProfessor</servlet-name>
        <url-pattern>/cadastrarProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarProfessor</servlet-name>
        <url-pattern>/buscarProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletarProfessor</servlet-name>
        <url-pattern>/deletarProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarProfessor</servlet-name>
        <url-pattern>/editarProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formEditar</servlet-name>
        <url-pattern>/formEditar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>consultarProfessor</servlet-name>
        <url-pattern>/consultarProfessor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
